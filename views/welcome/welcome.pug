extends layoutWelcome

block content

    
    form(action="/users/login" method="POST").form__front
        if error
            .form-errors
                p.errors #{ error }
        .form-email
            label(for="email") Adres e-mail
            input(type="email" name="email" placeholder="Wprowadź email" class = "email")
            span.form-email-error.u-alert(onselectstart="return false" onselect="return false" oncopy="return false") ""
        .form-password
            label(for="password") Hasło
            input(type="password" name="password" placeholder="Wprowadź hasło" class = "password")
            span.form-nip-password.u-alert(onselectstart="return false" onselect="return false" oncopy="return false") ""
        .form-login-btn
            button(name="submitLogin" type="submit" class="button") Zaloguj
        .form-reminder
            a(href="/users/register").register 
                p Rejestracja
            a(href="/users/forgot").forgot
                p Zapomniałem hasła
        if successes
            .form-information
                for success in successes
                    p #{ success }